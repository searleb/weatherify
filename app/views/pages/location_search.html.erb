<!-- LOCATION SEARCH PAGE -->

<% @ip_location = request.location %>

<section class = "col-md-4 col-md-offset-4">
  <h1 class="text-center">Where are you?</h1>
  <%= form_tag '/location_search' do  %>
  <p>
   <%= label_tag  %>
   <%= text_field_tag :city, nil, :class => 'form-control input-lg', :required => true, :value => @ip_location.city %>
 </p>
 <%= submit_tag( "GO!", :id => "button", :class => "btn btn-default btn-lg", :data=>{"loading-text" => "Loading..."}) %>
 <% end %>
</section>



<script>
  $('#button').click(function () {
    var btn = $(this)
    btn.button('loading')
    $.ajax(...).always(function () {
      btn.button('reset')
    });
  });
</script>




