<!DOCTYPE html>
<html>
<head>
  <title>WeatherifyApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1>Weatherify</h1>

<nav>
    <ul>
      <li><%= link_to('Home', '/') %></li>
      <li><%= User.find( session[:user_id] ).username if session[:user_id] %></li>
      <li><%= User.find( session[:user_id] ).avatar if session[:user_id] %></li>
      <%== smartnav %>
    </ul>
  </nav>

<% if flash[:notice].present? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
