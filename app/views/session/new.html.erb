<% if flash[:notice].present? %>
<div class = "notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag '/login' do %>
	<p>
		<%= label_tag :username %>
		<%= text_field_tag :username%>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	<%= submit_tag %>
<% end %>